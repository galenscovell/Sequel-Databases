
<section id="add">
  <form action="/new" method="get" accept-charset="utf-8">
    <button type="submit">NEW PLAYER</button>
  </form>
</section>
 
<% @players.each do |player| %>
  <article id="player_list">
    <p>
      <%= player[:last_name] + ", " + player[:first_name] %>
      <%= "(Level: #{player[:level]})" %>
      <span><a href="/<%= player.id %>">[edit]</a></span>
    </p>
    <p class="meta">Joined: <%= player.join_date %></p>
  </article>
<% end %>