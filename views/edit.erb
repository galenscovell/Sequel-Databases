

<div class="row">
  <form action="/update/<%= @user.id %>" method="post" accept-charset="utf-8">
    <div>
      <input type="text" class="edit_user" value="<%= @user.name %>" placeholder="User name&hellip;" />
    </div>

    <div>
      <input type="text" class="edit_user" value="<%= @user.password %>" placeholder="Password&hellip;" />
    </div>
  
    <div>
      <input type="text" class="edit_user" value="<%= @user.email %>" placeholder="Email&hellip;" />
    </div>
    
    <button type="submit">UPDATE</button>
  </form>
  <a href="/users" class="back_button"><img src="/css/pics/back_arrow.gif"></img></a>
</div>