

<div class="row">
  <form action="/update/<%= @post.id %>" method="post" accept-charset="utf-8">
    <div>
      <input type="text" class="edit_post" name="post[username]" value="<%= @post.username %>" placeholder="<%= @post.username %>"></input>
    </div>

    <div>
      <input type="text" class="edit_post" name="post[title]" value="<%= @post.title %>" placeholder="Brief title&hellip;"></input>
    </div>

    <div>
      <textarea id="edit_content" name="post[content]" value="<%= @post.content %>" placeholder="<%= @post.content %>"></textarea>
    </div>
  
    <div>
      <input type="text" class="edit_post" name="post[tags]" value="<%= @post.tags %>" placeholder="<%= @post.tags %>"</input>
    </div>
    
    <button type="submit">UPDATE</button>
  </form>
  <a href="/post/<%= @post.id %>" class="back_button"><img src="/css/pics/back_arrow.gif"></img></a>
</div>